#include <stdio.h>

int is_leap(int year) {
    return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
}

int is_valid_date(int day, int month, int year) {
    if (year < 1812 || year > 2015 || month < 1 || month > 12 || day < 1) return 0;
    int max_days = (month == 2) ? (is_leap(year) ? 29 : 28) : (month == 4 || month == 6 || month == 9 || month == 11) ? 30 : 31;
    return day <= max_days;
}

int main() {
    int day, month, year;

    do {
        printf("Enter today's date (dd mm yyyy): ");
        scanf("%d %d %d", &day, &month, &year);
    } while (!is_valid_date(day, month, year));

    day++;

    if ((month == 2 && day > (is_leap(year) ? 29 : 28)) || (day > (30 + (month == 2) - (month == 4 || month == 6 || month == 9 || month == 11)))) {
        day = 1;
        month++;

        if (month > 12) {
            month = 1;
            year++;
        }
    }

    printf("Next day is: %d %d %d\n", day, month, year);
    return 0;
}

     
